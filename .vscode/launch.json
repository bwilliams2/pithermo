{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/pithermo-app/frontend",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "protocol": "auto",
            "port": 9229
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "/usr/bin/google-chrome-stable",
            "runtimeArgs": [
                "--user-data-dir=/home/bryce/.config/google-chrome/Dev-Profile/"
            ],
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}